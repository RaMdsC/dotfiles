# Git
alias ga="git add"
alias gaa="ga --all"
alias gb="git branch"
alias gba="gb --all"
alias gc="git commit --signoff"
alias gca="gc --amend"
alias gcaa="gca --no-edit"
alias gcp="git cherry-pick"
alias gcpa="gcp --abort"
alias gcpc="gcp --continue"
alias gd="git diff"
alias gdc="gd --cached"
alias gfo="git fetch origin"
alias gfu="git fetch upstream"
alias gh="git checkout"
alias gl="git log"
alias glg="gl --grep"
alias glo="gl --pretty=oneline --abbrev-commit"
alias gp="git push"
alias gpf="gp --force"
alias gr="git rebase"
alias gra="gr --abort"
alias grc="gr --continue"
alias gri="gr --interactive"
alias grv="git remote -v"
alias greh="git reset --hard"
alias gres="git reset --soft"
alias gs="git status"
alias gst="git stash"
alias gstl="gst list"
alias gstp="gst pop"
alias gsts="gst show"
alias gt="git log --tags --simplify-by-decoration --pretty=\"format:%ai %d\""

# Miscellaneous
alias e="exit"
alias ll="ls -al"
alias ports="lsof -i -P"
alias rmr="rm -fr"

# Tmux
alias tmuxl="tmux list-sessions"

# Vim
alias v="vim"
alias vo="view"
